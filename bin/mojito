var cli = require('../cli'),
    log = require('../lib/log');


function done(err, msg) {
    var code;
    if(err) {
        code = err.errno || 1;
        log.error(err instanceof Error ? err.message : err);
    } else if(msg) {
        code = 0;
        console.log(msg);
    }
    process.exit(code);
}

cli(process.argv.slice(2), process.cwd(), done);
